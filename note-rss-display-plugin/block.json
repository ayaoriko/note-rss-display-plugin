{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "note-rss/block",
	"version": "1.0.0",
	"title": "note.com RSS表示",
	"category": "widgets",
    "keywords": ["note", "rss", "feed"],
	"icon": "rss",
	"description": "note.comのRSSフィードをサムネイル付きで表示します。",
	"attributes": {
		"feed_url": {
			"type": "string",
			"default": ""
		},
		"items": {
			"type": "number",
			"default": 5
		}
	},
	"supports": {
		"html": false,
        "align": true
	},
	"textdomain": "note-rss-block",
	"editorScript": "file:./build/index.js",
	"render": "render_note_rss_block"
}